<div class="container">
  <div class="col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1"><%=form_for(@comment,:url => { :controller => :comments, :action => :update }) do |f| %>
      <h2>commentを編集する</h2>

    <% if @comment.errors.any? %>
      <div id="error_explanation">
        <h2><%= comment.errors.count %>件のエラーがあります。</h2>
        <ul>
        <% comment.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <%= f.hidden_field :topic_id %>
    <div class="field">
      <%= f.text_field :content, placeholder: "内容", class: "form-control"  %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>
    <% end %>
  </div>
</div>